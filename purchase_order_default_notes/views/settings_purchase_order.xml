<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="res_config_settings_acuerdo_compra_view_form_purchase" model="ir.ui.view">
            <field name="name">res.config.settings.acuerdo.compra.view.form.purchase</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='purchase']" position="inside">
                    <h2>Acuerdos De Compra</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="col-12 col-lg-12 o_setting_right_pane">
                                <label for="acuerdo_de_compra"/>
                                <div class="text-muted">
                                    Terminos y Condiciones
                                </div>
                                <field name="acuerdo_de_compra" class="o_light_label" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
	</data>
</odoo>